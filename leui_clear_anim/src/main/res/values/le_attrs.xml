<resources>

    <declare-styleable name="LeSlideView">
        <attr
            name="LeSlideFrontContentOffset"
            format="dimension" />
        <attr
            name="LeSlideFrontContentView"
            format="reference" />
        <attr
            name="LeSlideFrontView"
            format="reference" />
        <attr
            name="LeSlideBackView"
            format="reference" />
        <attr
            name="LeSlideBackViewClip"
            format="boolean" />
        <attr
            name="LeSlideMode"
            format="enum">
            <enum
                name="none"
                value="0" />
            <enum
                name="left"
                value="1" />
            <enum
                name="right"
                value="2" />
            <enum
                name="top"
                value="3" />
            <enum
                name="bottom"
                value="4" />
            <enum
                name="horizontal"
                value="5" />
            <enum
                name="vertical"
                value="6" />
        </attr>
    </declare-styleable>

    <declare-styleable name="LeuiRecentTaskImageView_Layout">
        <attr
            name="layout_width_landscape"
            format="dimension" />
        <attr
            name="layout_height_landscape"
            format="dimension" />
        <attr
            name="layout_width_portrait"
            format="dimension" />
        <attr
            name="layout_height_portrait"
            format="dimension" />
    </declare-styleable>

    <!-- eui add -->
    <declare-styleable name="LeCircleProgressBar">
        <attr name="background_color" format="color|reference" />
        <attr name="progress_start_degree" format="float" />
        <attr name="progress_total_degree" format="float" />
        <attr name="progress_color" format="color|reference" />
        <attr name="progress_stroke_width" format="dimension|reference" />
        <attr name="progress_background_color" format="color|reference" />
        <attr name="progress_stroke_cap">
            <enum name="butt" value="0" />
            <enum name="round" value="1" />
            <enum name="square" value="2" />
        </attr>
    </declare-styleable>
</resources>
